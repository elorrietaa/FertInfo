<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCrema"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="673dp"
            android:layout_height="278dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/send_2"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:gravity="center"
            android:text="@string/send_2"
            android:textColor="@color/colorSubTitulos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send_3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send_3_1"
            android:textColor="@color/colorSubTitulos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send_3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send_3_2"
            android:textColor="@color/colorSubTitulos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send_3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send_3_3"
            android:textColor="@color/colorSubTitulos"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send_4"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:gravity="center"
            android:text="@string/send_4"
            android:textColor="@color/colorSubTitulos"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/send_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send_5"
            android:textColor="#7C5FBE"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>